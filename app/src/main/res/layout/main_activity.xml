<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFBFE"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:rotationX="0"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#CD8987"
        android:textSize="34sp" />


    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/bodyWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hintZaKg"
            android:inputType="number"
            android:paddingRight="20dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/kgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"
            android:padding="3dp"
            android:text="@string/kgText"
            android:textColor="#CCFBFE"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="20dp"
        android:background="#CD8987"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioGroup
            android:id="@+id/radio_group"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp"
            android:textAlignment="center">

            <RadioButton

                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radioMale"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#CCFBFE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radioFemale"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#CCFBFE"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/satiInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/hoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#CD8987"
            android:padding="3dp"
            android:text="@string/textSati"
            android:textAlignment="viewStart"
            android:textColor="#CCFBFE"
            android:textColorLink="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/minuteInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/minutesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#CD8987"
            android:padding="3dp"
            android:text="@string/minuteText"
            android:textAlignment="viewStart"
            android:textColor="#CCFBFE"
            android:textColorLink="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/errorTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bearImg"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="bearpicture"
            android:scaleType="centerInside"
            android:src="@drawable/beer_mug_empty_solid"
            tools:srcCompat="@drawable/beer_mug_empty_solid" />

        <ImageView
            android:id="@+id/wineImg"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:contentDescription="wine picture"
            android:src="@drawable/wine_glass_solid"
            app:tint="#CD8987"
            tools:srcCompat="@drawable/wine_glass_solid" />

        <ImageView
            android:id="@+id/liquorImg"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:contentDescription="liqour picture"
            android:src="@drawable/whiskey_glass_solid"
            app:tint="#CD8987"
            tools:srcCompat="@drawable/whiskey_glass_solid" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"


        android:orientation="horizontal">


        <Spinner
            android:id="@+id/beerSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"
            android:padding="10dp"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/wineSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"

            android:padding="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/liquorSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"

            android:padding="10dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/beerKolicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintZaKolicinuPive"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/vinoKolicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintZaKolicinuVina"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/liquorKolicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintZaKolicinuAlk"
            android:inputType="number"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/abcBeer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"
            android:padding="10dp"
            android:spinnerMode="dialog"

            />

        <Spinner
            android:id="@+id/abcWine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"

            android:padding="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/abcLiquor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CD8987"

            android:padding="10dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="#7D5260"
        android:text="@string/buttonCalc"
        android:textAlignment="center"
        android:textColor="#CCFBFE"
        android:textColorLink="#E91E63" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
          />
    </LinearLayout>


</LinearLayout>